{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"strict": true,
		"lib": ["esnext"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["@cloudflare/workers-types/experimental", "@cloudflare/vitest-pool-workers"],
		"skipLibCheck": true,
		"composite": true,
		"outDir": "dist",
		"noEmit": false,
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*.ts", "worker-configuration.d.ts", "test/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
